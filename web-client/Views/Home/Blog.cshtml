@{
    var pageModel = new PageModel() { Title = "Tin tức", Description = "Mô ta seo tin tức", BodyClassName = "p-blog", MainClassName = "" }; ;
    var breadcrumbModel = new BreadcrumbComponent(pageModel.Title, new List<BaseLinkModel>()
    {
        new BaseLinkModel("Trang chủ","/"),
        new BaseLinkModel(pageModel.Title,"/Home/Blog"),
    });
    var sideBarCategoryModel = new SideBarCategoryComponent("Danh mục", new List<BaseLinkModel>()
    {
        new BaseLinkModel("Sự kiện","/Home/Blog"),
        new BaseLinkModel("Hoạt động công ty","/Home/Blog"),
        new BaseLinkModel("Tin tự động hóa","/Home/Blog"),
        new BaseLinkModel("Khuyến mãi","/Home/Blog"),
    });
    var sideBarArticleModel = new SideBarArticleComponent("Bài viết nổi bật", new List<BaseMediaLinkContentModel>()
    {
        new BaseMediaLinkContentModel("Cách phân biệt tín hiệu PNP và NPN chính xác nhất","/Home/Blog/BlogDetail","https://img.hoplongtech.com/hoplong/news/phan-biet-pnp-va-npn.jpg"),
        new BaseMediaLinkContentModel("Chi tiết cách cài đặt biến tần iG5A LS","/Home/Blog/BlogDetail","https://img.hoplongtech.com/hoplong/news/chi-tiet-cach-cai-dat-bien-tan-ig5a-ls.jpg"),
        new BaseMediaLinkContentModel("Động cơ điện 1 chiều là gì? Nguyên lý hoạt động và ứng dụng","/Home/Blog/BlogDetail","https://img.hoplongtech.com/hoplong/news/dong-co-dien-1-chieu-la-gi-nguyen-ly-hoat-dong-va-ung-dung.jpg"),
    });
}
@(await Html.PartialAsync("~/Views/Shared/Components/Common/Breadcrumb.cshtml", breadcrumbModel))
<div class="container py-4">

    <div class="row">
        <div class="col-lg-3 order-lg-2">
            <aside class="sidebar">
                <div class="card card-border card-border-bottom bg-color-light mb-4">
                    <div class="card-body p-3">
                        @(await Html.PartialAsync("~/Views/Shared/Components/Common/SideBarCategory.cshtml", sideBarCategoryModel))
                    </div>
                </div>

                <div class="card card-border card-border-bottom bg-color-light mb-4">
                    <div class="card-body p-3">
                        @(await Html.PartialAsync("~/Views/Shared/Components/Common/SideBarArticle.cshtml", sideBarArticleModel))
                    </div>
                </div>

                <div class="card card-border card-border-bottom bg-color-light mb-4">
                    <div class="card-body p-3">
                        @(await Html.PartialAsync("~/Views/Shared/Components/Common/SideBarIntro.cshtml", new SideBarIntroComponent("Giới thiệu", "Hợp Long là nhà cung cấp thiết bị, giải pháp tự động hóa và tích hợp robot công nghiệp hàng đầu tại Việt Nam. Chúng tôi có hơn 200.000 sản phẩm được chỉ định là nhà phân phối của các thương hiệu: Schneider Electric, Autonics, Omron, Hanyoung, Patlite, LS, Delta, Siemens, Idec,...", new BaseLinkModel("Tìm hiểu thêm", "#"))))
                    </div>
                </div>
            </aside>
        </div>
        <div class="col-lg-9 order-lg-1">
            <div class="blog-posts">
                <div class="row px-3">
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="col-sm-6">
                            <article class="post post-medium border-0 pb-0 mb-5">
                                <div class="post-image">
                                    <a href="blog-post.html">
                                        <img src="https://img.hoplongtech.com/hoplong/uploads/ecovacs-va-tineco-cach-mang-hoa-viec-lam-sach-nha-cua-voi-4-sieu-pham-moi-6.jpg" class="img-fluid img-thumbnail img-thumbnail-no-borders rounded-0" alt="" />
                                    </a>
                                </div>

                                <div class="post-content">

                                    <h2 class="font-weight-semibold text-5 line-height-6 mt-3 mb-2"><a href="blog-post.html">Ecovacs và Tineco "cách mạng hóa" việc làm sạch nhà cửa với ...</a></h2>
                                    <p>Sự kiện ra mắt 4 sản phẩm làm sạch thông minh mới nhất của Ecovacs diễn ra vào ngày 15/10 vừa qua đã để lại dấu ấn sâu đậm trong lòng người tiêu dùng Việt.</p>

                                    <div class="post-meta">
                                        <span><i class="far fa-user"></i> <a href="#">Nguyễn Văn A</a> </span>
                                        <span><i class="far fa-folder"></i> <a href="#">Sự kiện</a></span>
                                        @* <span class="d-block mt-2"><a href="blog-post.html" class="btn btn-xs btn-light text-1 text-uppercase">Chi tiết</a></span> *@
                                    </div>

                                </div>
                            </article>
                        </div>
                    }


                </div>

                <div class="row">
                    <div class="col">
                        <ul class="pagination float-end">
                            <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-left"></i></a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-right"></i></a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>