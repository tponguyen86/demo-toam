@model BreadcrumbComponent
@if (Model != null)
{
    <section class="page-header page-header-modern page-header-background page-header-background-md parallax overlay overlay-color-dark overlay-show overlay-op-5 mt-0" data-plugin-parallax data-plugin-options="{'speed': 1.2}"
             data-image-src="@Model.Media">
        <div class="container">
            <div class="row">
                <div class="col-md-8 order-2 order-md-1 align-self-center p-static">
                    @if (Model.Title?.HasValueString() == true)
                    {
                        <h1>@Model.Title</h1>
                    }
                    @if (Model.Description?.HasValueString() == true)
                    {
                        <span class="sub-title">@Model.Description</span>
                    }
                </div>
                @if (Model.Links?.Any() == true)
                {
                    var count = Model.Links.Count;
                    <div class="col-md-4 order-1 order-md-2 align-self-center">
                        <ul class="breadcrumb breadcrumb-light d-block text-md-right">

                            @for (int i = 0; i < count; i++)
                            {
                                if (i + 1 == count && Model.LastIsSpan == true)
                                {
                                    <li class="active">@Model.Links[i].Title</li>
                                }
                                else
                                {
                                    <li><a class="text-color-default text-color-hover-primary text-decoration-none" href="@Model.Links[i].Href">@Model.Links[i].Title</a></li>
                                }
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </section>
}