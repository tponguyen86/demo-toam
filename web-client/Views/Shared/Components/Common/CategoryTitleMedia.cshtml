@model CategoryTitleMediaComponent
@if (Model != null)
{
    <div class="card border-radius-2 bg-color-grey border-0 box-shadow-10">
        <div class="card-body p-1">
            <div class="portfolio-item mb-0">
                <div class="thumb-info thumb-info-lighten border-radius-0">
                    <div class="thumb-info-wrapper border-radius-0">
                        <img src="@Model.Media" class="img-fluid border-radius-0" alt="@Model.Title">
                        <div class="thumb-info-title">
                            <span class="thumb-info-inner line-height-1 text-primary">
                                <a href="@Model.Href" class="btn btn-xl btn-link-effect-1 text-uppercase bg-transparent text-color-light  bg-color-before-primary border-0  p-0 ">@Model.Title</a>
                            </span>
                            @if (Model.Group != null && Model.Group?.Title?.HasValueString() == true)
                            {
                                <a href="@Model.Group.Href">
                                    <span class="thumb-info-type text-color-light">
                                        @Model.Group.Title
                                    </span>
                                </a>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}