@model PagingComponent
@if (Model?.Links?.Any() == true)
{
    <div class="row">
        <div class="col">
            <ul class="pagination float-end">
                @foreach (var item in Model.Links)
                {
                    var classes = "page-item";
                    if (item.IsActive) classes += " active";
                    if (item.IsDisabled) classes += " disabled";

                    <li class="@classes">
                        <a class="page-link" href="@(!item.IsDisabled ? item.Href : "#")">@Html.Raw(item.Title)</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}

